{
    "required_api_version": "2.0.0",
    "name": "Toolbox Manager",
    "description": "Search and launch Toolboxes/Distroboxes instantly in your favorite terminal",
    "developer_name": "Pribal",
    "icon": "images/icon.png",
    "options": {
        "query_debounce": 0.05
    },
    "preferences": [
        {
            "id": "keyword",
            "type": "keyword",
            "name": "Keyword",
            "description": "Keyword to trigger the extension",
            "default_value": "tb"
        },
        {
            "id": "terminal",
            "type": "select",
            "name": "Terminal Emulator",
            "description": "Choose which terminal to use for the 'enter' command",
            "default_value": "auto",
            "options": [
                "auto",
                "kitty",
                "alacritty",
                "wezterm",
                "foot",
                "st",
                "urxvt"
            ]
        },
        {
            "id": "image",
            "type": "input",
            "name": "Image",
            "description": "Image used to create toolboxes",
            "default_value": ""
        },
        {
            "id": "enter_command",
            "type": "input",
            "name": "Command",
            "description": "Command used to enter toolbox. Use %name in command to refer to toolbox name",
            "default_value": "toolbox enter"
        }
    ]
}